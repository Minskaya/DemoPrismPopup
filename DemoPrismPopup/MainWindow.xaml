<Window
    x:Class="DemoPrismPopup.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DemoPrismPopup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title="MainWindow"
    Width="525"
    Height="350"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nom" />
                <TextBox Text="{Binding Nom}" />
            </StackPanel>
        </StackPanel>

        <StackPanel
            HorizontalAlignment="Right"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal">
            <Button
                Margin="2,0"
                Command="{Binding MessageBoxCommand}"
                Content="Show messageBox" />
            <Button
                Margin="2,0"
                Command="{Binding PopupWithServiceCommand}"
                Content="Popup avec interaction service" />
            <Button
                Margin="2,0"
                Command="{Binding Popup2}"
                Content="Popup " />
        </StackPanel>

        <Grid />
    </DockPanel>
</Window>